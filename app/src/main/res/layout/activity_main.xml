<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40A9C34A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Rock, Paper, Scissors"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:text="You 0:0 CPU"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imgRock"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="500dp"
        android:background="#4CAF50"
        android:clickable="true"
        android:onClick="onImageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/stone" />

    <ImageView
        android:id="@+id/imgPaper"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="@+id/imgRock"
        android:layout_marginStart="15dp"
        android:layout_marginTop="500dp"
        android:layout_toEndOf="@+id/imgRock"
        android:background="#F44336"
        android:clickable="true"
        android:onClick="onImageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/paper" />

    <ImageView
        android:id="@+id/imgScissors"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="500dp"
        android:layout_toEndOf="@+id/imgPaper"
        android:background="#2196F3"
        android:clickable="true"
        android:onClick="onImageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/scissor" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"

        />
</RelativeLayout>



